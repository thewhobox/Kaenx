<UserControl
    x:Class="METS.Classes.Controls.Paras.ParamEnum"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:METS.Context.Catalog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="700">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="ParaName" Text="Platzhalter" VerticalAlignment="Center" Margin="5" FontSize="12" />
        <ComboBox Grid.Column="1" x:Name="ParaValue" ItemsSource="{Binding}" Height="27" Margin="5" HorizontalAlignment="Stretch" SelectedValuePath="Value">
            <ComboBox.ItemTemplate>
                <DataTemplate x:DataType="local:AppParameterTypeEnumViewModel">
                    <TextBlock Text="{Binding Text}" FontSize="12" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</UserControl>
