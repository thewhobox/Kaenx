<Application
    x:Class="Kaenx.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kaenx" xmlns:controls="using:Microsoft.UI.Xaml.Controls">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="BrushAccentColor1" Color="#7da647" />
                    <SolidColorBrush x:Key="BrushAccentColor2" Color="#9ebd75" />
                    <SolidColorBrush x:Key="BrushAccentColorLight1" Color="White" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="BrushAccentColor1" Color="#5a7834" />
                    <SolidColorBrush x:Key="BrushAccentColor2" Color="#778f59" />
                    <SolidColorBrush x:Key="BrushAccentColorLight1" Color="White" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
